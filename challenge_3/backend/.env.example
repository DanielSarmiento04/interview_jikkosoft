# Database Configuration (Docker PostgreSQL)
# This matches the docker-compose.yml configuration
PG_CONNECTION_STRING=postgresql://user:password@localhost:5432/library
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=library

# Application Settings
APP_NAME=Library Management System
APP_ENV=development
DEBUG=True
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-in-production

# CORS Settings
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000,http://localhost:8080

# Server Settings
HOST=0.0.0.0
PORT=8000

# Loan Settings
DEFAULT_LOAN_DAYS=14
MAX_RENEWALS=2
DAILY_FINE_RATE=0.50
MAX_MEMBER_LOANS=3

# Logging
LOG_LEVEL=INFO
